<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.armstrong.ika.FlexiReader">

    <uses-permission android:name="android.permission.INTERNET"/>

    <!--android:roundIcon="@mipmap/ic_rss_launcher_round"-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/flexireader_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FeedActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".AboutActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".AddRecordActivity"
            android:parentActivityName=".FeedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FeedActivity" />
        </activity>

        <activity
            android:name=".ModifyRecordActivity"
            android:parentActivityName=".FeedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FeedActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".ColorActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>

</manifest>